# Maintainer: webmon Maintainers <ops@example.com>
pkgname=webmon
pkgver=0.1.3
pkgrel=1
pkgdesc="Lightweight web system monitor"
url="https://example.invalid/webmon"
arch="all"
license="custom"
depends=""
makedepends="build-base"
subpackages=""
source=""
options="!check"
lint="skip"
builddir="$startdir/../.."

build() {
  cd "$builddir"
  make CC=${CC:-gcc} CFLAGS="$CFLAGS"
}

package() {
  cd "$builddir"
  install -Dm755 webmon "$pkgdir/usr/bin/webmon"
  install -Dm755 packaging/alpine/webmon.initd "$pkgdir/etc/init.d/webmon"
  install -Dm644 README.md "$pkgdir/usr/share/doc/webmon/README.md"
}
